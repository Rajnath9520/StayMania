<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <br>
<h3>Create a new Listing</h3>
<form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label" >Title</label>
            <input name="Listing[title]" placeholder="Add a title" type="text" class="form-control" required >
            <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label" >Description</label>
            <textarea name="Listing[description]" placeholder="Enter description" class="form-control" required ></textarea>
            <div class="invalid-feedback">Please enter short description</div>
        </div>
        
        <div class="mb-3">
            <label for="Listing[image]" class="form-label" >Upload Image</label>
            <input name="Listing[image]"  type="file" class="form-control" required>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="Listing[price]" class="form-label" >Price</label>
            <input name="Listing[price]" placeholder="1200" class="form-control" required >
            <div class="invalid-feedback">Price  invalid!</div>
        </div>
        
        <div class="mb-3 col-md-8">
            <label for="Listing[country]" class="form-label" >Country</label>
            <input name="Listing[country]" placeholder="India" type="text" class="form-control" required >
            <div class="invalid-feedback">Enter country name</div>
        </div>
        </div>
        <div class="mb-3">
            <label for="Listing[location]" class="form-label" >Location</label>
            <input name="Listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control" required >
            <div class="invalid-feedback">Enter location</div>
        </div>
        <div class="mb-3">
            <label for="Listing[category]" class="form-label" >Category</label>
            <select class="form-select form-select-sm"  
            name="Listing[category]" type="text" >
                <option disabled selected>Category:</option>
                <option value="Rooms">Rooms</option>
                <option value="Iconic Cities">Iconic Cities</option>
                <option value="Castles">Castles</option>
                <option value="Camping">Camping</option>
                <option value="Farms">Farms</option>
                <option value="Boats">Boats</option>
            </select>
        </div>


        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br>
</form>
</div>
</div>